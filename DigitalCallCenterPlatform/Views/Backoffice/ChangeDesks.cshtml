@model DigitalCallCenterPlatform.Models.BackofficeDesksModel
@{
    ViewBag.Title = "ChangeDesks";
}

<h2>Change Desks</h2>

<hr />

@using (Html.BeginForm("ChangeDesksAsync", "Backoffice", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-2 text-right">
            <b>@Html.DisplayNameFor(m => m.Username)</b>
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(m => m.Username, new { @class = "form-control" })
            @Html.Hidden("id")
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Desk, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Desk, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="radio" name="type" value="Add" checked> Add<br>
            <input type="radio" name="type" value="Remove"> Remove<br>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}