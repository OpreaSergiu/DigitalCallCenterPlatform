@model DigitalCallCenterPlatform.Models.NewBusinessViewModel

@{
    ViewBag.Title = "Newbusiness";
}

<h2>Newbusiness</h2>

<div class="row">
    <div class="col-sm-6 text-left">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Files</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Files)
                {
                    var fileName = Path.GetFileName(item);
                    <tr>
                        <td class="filterable-cell" style="word-break: keep-all;">@Html.ActionLink(fileName, "PostNewBusiness", new { Name = fileName })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-sm-6 text-left">
        <br />
        <b>Batch Result:</b>
        <br />
        <div class="well">
            <p>
                File: @ViewBag.filename
                <br />
                --------------------------------------------------
                <br />
                New accounts: @ViewBag.accounts
                <br />
                --------------------------------------------------
                <br />
                New invoices: @ViewBag.invoices
                <br />
                --------------------------------------------------
                <br />
                Total balance: @ViewBag.balance
            </p>
        </div>
        <button type="button" class="btn">@Html.ActionLink("Commit Results", "CommitNewBusinessFile", new { Name = @ViewBag.filename })</button>
        <button type="button" class="btn">@Html.ActionLink("Ignore Results", "IgnoreResults", new { Name = @ViewBag.filename })</button>
        <br />
        <br />
    </div>
</div>
